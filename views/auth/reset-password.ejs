<div class="card auth-card">
    <div class="auth-header">
        <a href="/" class="brand-logo">Casalinga Tours</a>
        <p class="mb-0 mt-2 opacity-75">New Password</p>
    </div>
    <div class="auth-body">

        <% if (error) { %>
            <div class="alert alert-danger text-center mb-4 border-0 bg-danger-subtle text-danger">
                <%= error %>
            </div>
        <% } %>

        <form action="/auth/reset-password/<%= token %>" method="POST">
            <div class="mb-3">
                <label class="form-label text-muted small fw-bold">New Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-lock text-muted"></i></span>
                    <input type="password" name="password" class="form-control border-start-0 bg-light" required placeholder="New password">
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label text-muted small fw-bold">Confirm Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-lock text-muted"></i></span>
                    <input type="password" name="confirm_password" class="form-control border-start-0 bg-light" required placeholder="Confirm password">
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Reset Password</button>
            </div>
        </form>
    </div>
</div>