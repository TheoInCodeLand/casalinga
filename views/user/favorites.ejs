<div class="bg-light py-5">
    <div class="container">
        <div class="row">
            <%- include('../partials/user/sidebar') %>
            
            <div class="col-lg-9">
                <h4 class="fw-bold mb-4">Saved Tours</h4>
                
                <% if (favorites.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="far fa-heart fa-3x text-muted opacity-50 mb-3"></i>
                        <h5>No favorites yet</h5>
                        <p class="text-muted">Save tours you are interested in to view them later.</p>
                        <a href="/tours" class="btn btn-primary rounded-pill mt-3">Explore Tours</a>
                    </div>
                <% } %>

                <div class="row g-4">
                    <% favorites.forEach(tour => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm tour-card">
                            <div class="position-relative">
                                <img src="<%= tour.image %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                                <button onclick="removeFavorite('<%= tour.id %>')" class="btn btn-light rounded-circle position-absolute top-0 end-0 m-2 shadow-sm text-danger" title="Remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="card-body">
                                <h6 class="fw-bold mb-1"><a href="/tours/<%= tour.slug %>" class="text-dark text-decoration-none"><%= tour.title %></a></h6>
                                <p class="text-muted small mb-2"><i class="fas fa-map-marker-alt me-1"></i> <%= tour.location %></p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="fw-bold text-primary">R<%= tour.discount_price || tour.price %></span>
                                    <a href="/tours/<%= tour.slug %>" class="btn btn-sm btn-outline-primary rounded-pill">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
async function removeFavorite(id) {
    if(!confirm('Remove this tour from favorites?')) return;
    try {
        const res = await fetch(`/tours/${id}/favorite`, { method: 'POST' });
        const data = await res.json();
        if(data.success) location.reload();
    } catch(e) { console.error(e); }
}
</script>