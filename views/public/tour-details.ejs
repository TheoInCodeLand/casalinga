            <% } else if (tour.status == 'fully_booked') { %>
                <button disabled class="px-6 py-3 bg-gray-300 text-gray-600 font-bold rounded-xl cursor-not-allowed whitespace-nowrap">
                    Sold Out
                </button>
            <% } %>
        </div>
    </div>

    <!-- Back to Top Button -->
    <button id="back-to-top" class="fixed bottom-20 right-4 sm:right-6 bg-primary text-white p-3 rounded-full shadow-strong hover:shadow-glow hover:scale-110 transition-all duration-300 transform translate-y-20 z-30 touch-target focus-ring" aria-label="Back to top">
        <i data-lucide="arrow-up" class="w-5 h-5"></i>
    </button>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Hide loading overlay
            setTimeout(() => {
                document.getElementById('loading-overlay').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('loading-overlay').style.display = 'none';
                }, 300);
            }, 500);
            
            // Initialize Lucide icons
            lucide.createIcons();
            
            // Initialize Swipers
            initializeSwipers();
            
            // Setup event listeners
            setupEventListeners();
            
            // Initialize guest counter
            updateGuestCounter();
            
            // Check initial scroll position
            checkScrollPosition();
        });
        
        // Initialize Swiper sliders
        function initializeSwipers() {
            // Gallery Swiper
            <% if(images.length > 1) { %>
            new Swiper('.gallery-swiper', {
                slidesPerView: 1.2,
                spaceBetween: 16,
                centeredSlides: false,
                loop: false,
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                breakpoints: {
                    475: { slidesPerView: 1.5 },
                    640: { slidesPerView: 2.2 },
                    768: { slidesPerView: 2.5 },
                    1024: { slidesPerView: 3, spaceBetween: 24 },
                }
            });
            <% } %>
            
            // Similar Tours Swiper
            <% if (similarTours && similarTours.length > 0) { %>
            new Swiper('.similar-tours-swiper', {
                slidesPerView: 1.1,
                spaceBetween: 16,
                loop: false,
                navigation: {
                    nextEl: '.similar-next',
                    prevEl: '.similar-prev',
                },
                pagination: {
                    el: '.similar-pagination',
                    clickable: true,
                },
                breakpoints: {
                    475: { slidesPerView: 1.3 },
                    640: { slidesPerView: 2.1 },
                    768: { slidesPerView: 2.5 },
                    1024: { slidesPerView: 3, spaceBetween: 24 },
                    1280: { slidesPerView: 4 },
                }
            });
            <% } %>
        }
        
        // Setup all event listeners
        function setupEventListeners() {
            // Mobile menu toggle
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuButton && mobileMenu) {
                mobileMenuButton.addEventListener('click', function() {
                    const isExpanded = this.getAttribute('aria-expanded') === 'true';
                    this.setAttribute('aria-expanded', !isExpanded);
                    mobileMenu.setAttribute('aria-hidden', isExpanded);
                    
                    if (isExpanded) {
                        mobileMenu.classList.remove('translate-y-0', 'opacity-100', 'pointer-events-auto');
                        mobileMenu.classList.add('-translate-y-2', 'opacity-0', 'pointer-events-none');
                    } else {
                        mobileMenu.classList.remove('-translate-y-2', 'opacity-0', 'pointer-events-none');
                        mobileMenu.classList.add('translate-y-0', 'opacity-100', 'pointer-events-auto');
                    }
                    
                    // Update menu icon
                    const icon = this.querySelector('i');
                    if (icon) {
                        icon.setAttribute('data-lucide', isExpanded ? 'menu' : 'x');
                        lucide.createIcons();
                    }
                });
            }
            
            // Share button
            const shareBtn = document.getElementById('share-btn');
            if (shareBtn && navigator.share) {
                shareBtn.addEventListener('click', async () => {
                    try {
                        await navigator.share({
                            title: '<%= tour.title %>',
                            text: 'Check out this amazing tour!',
                            url: window.location.href,
                        });
                    } catch (err) {
                        console.log('Error sharing:', err);
                    }
                });
            }
            
            // Back to top button
            const backToTopBtn = document.getElementById('back-to-top');
            if (backToTopBtn) {
                backToTopBtn.addEventListener('click', () => {
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
            }
            
            // Scroll events
            window.addEventListener('scroll', () => {
                checkScrollPosition();
                toggleStickyBookingBar();
            });
            
            // Form validation
            const bookingForm = document.getElementById('booking-form');
            if (bookingForm) {
                bookingForm.addEventListener('submit', function(e) {
                    const guestCount = parseInt(document.getElementById('guest-count').value);
                    const maxCapacity = <%= tour.capacity %>;
                    
                    if (guestCount > maxCapacity) {
                        e.preventDefault();
                        showNotification(`Maximum capacity is ${maxCapacity} guests`, 'error');
                        return false;
                    }
                    
                    if (guestCount < 1) {
                        e.preventDefault();
                        showNotification('At least 1 guest is required', 'error');
                        return false;
                    }
                    
                    // Show loading state
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.innerHTML = '<div class="spinner w-5 h-5 border-2 mx-auto"></div>';
                        submitBtn.disabled = true;
                    }
                });
            }
            
            // Handle Enter key on similar tour cards
            document.querySelectorAll('.similar-tours-swiper a').forEach(card => {
                card.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter') {
                        window.location.href = card.getAttribute('href');
                    }
                });
            });
        }
        
        // Guest counter functionality
        function adjustGuests(change) {
            const input = document.getElementById('guest-count');
            let value = parseInt(input.value) + change;
            const max = parseInt(input.getAttribute('max'));
            
            if (value < 1) value = 1;
            if (value > max) value = max;
            
            input.value = value;
            updateGuestCounter();
        }
        
        function updateGuestCounter() {
            const input = document.getElementById('guest-count');
            const value = parseInt(input.value);
            const max = parseInt(input.getAttribute('max'));
            const spotsText = document.getElementById('spots-available');
            
            if (spotsText) {
                spotsText.textContent = `${max - value} spots available`;
                
                if (max - value <= 3) {
                    spotsText.classList.add('text-red-600', 'font-semibold');
                } else {
                    spotsText.classList.remove('text-red-600', 'font-semibold');
                }
            }
            
            // Update mobile booking bar
            const mobileBar = document.getElementById('sticky-booking-bar');
            if (mobileBar) {
                const mobilePrice = mobileBar.querySelector('.text-lg');
                if (mobilePrice && <%= tour.discount_price ? true : false %>) {
                    const originalPrice = <%= parseFloat(tour.price) %>;
                    const discountPrice = <%= parseFloat(tour.discount_price) %>;
                    const total = discountPrice * value;
                    mobilePrice.textContent = `R${total.toLocaleString()}`;
                }
            }
        }
        
        // Check scroll position for back to top button
        function checkScrollPosition() {
            const backToTopBtn = document.getElementById('back-to-top');
            if (backToTopBtn) {
                if (window.scrollY > 500) {
                    backToTopBtn.classList.remove('translate-y-20');
                    backToTopBtn.classList.add('translate-y-0');
                } else {
                    backToTopBtn.classList.remove('translate-y-0');
                    backToTopBtn.classList.add('translate-y-20');
                }
            }
        }
        
        // Toggle sticky booking bar on scroll
        function toggleStickyBookingBar() {
            const stickyBar = document.getElementById('sticky-booking-bar');
            if (!stickyBar) return;
            
            const scrollTop = window.scrollY || document.documentElement.scrollTop;
            const windowHeight = window.innerHeight;
            const documentHeight = document.documentElement.scrollHeight;
            
            // Show when scrolling up or near bottom
            if (scrollTop > 400 && (scrollTop < lastScrollTop || (windowHeight + scrollTop) >= documentHeight - 100)) {
                stickyBar.classList.remove('translate-y-full');
                stickyBar.classList.add('translate-y-0');
            } else {
                stickyBar.classList.remove('translate-y-0');
                stickyBar.classList.add('translate-y-full');
            }
            
            lastScrollTop = scrollTop;
        }
        let lastScrollTop = 0;
        
        // Scroll to content
        function scrollToContent() {
            const headerHeight = document.querySelector('header').offsetHeight;
            window.scrollTo({
                top: window.innerHeight - headerHeight,
                behavior: 'smooth'
            });
        }
        
        // Scroll to booking form
        function scrollToBookingForm() {
            const bookingForm = document.getElementById('booking-form');
            const headerHeight = document.querySelector('header').offsetHeight;
            
            if (bookingForm) {
                const yOffset = -headerHeight - 20;
                const y = bookingForm.getBoundingClientRect().top + window.pageYOffset + yOffset;
                
                window.scrollTo({
                    top: y,
                    behavior: 'smooth'
                });
                
                // Focus on guest input
                setTimeout(() => {
                    document.getElementById('guest-count').focus();
                }, 500);
            }
        }
        
        // Favorite toggle function
        async function toggleFavorite(tourId) {
            const btn = document.getElementById('favorite-btn');
            const quickBtn = document.getElementById('quick-favorite-btn');
            const btnIcon = btn.querySelector('.fa-heart');
            const quickBtnIcon = quickBtn ? quickBtn.querySelector('.fa-heart') : null;
            const btnText = document.getElementById('fav-text');
            
            // Prevent multiple clicks
            if (btn.dataset.processing === 'true') return;
            btn.dataset.processing = 'true';
            
            // Optimistic UI update
            const isCurrentlyFav = btnIcon.classList.contains('fa-solid');
            
            // Update main button
            if (isCurrentlyFav) {
                btnIcon.classList.replace('fa-solid', 'fa-regular');
                btnIcon.classList.remove('text-red-500', 'animate-pulse-gentle');
                btnText.textContent = 'Add to Favorites';
                btn.setAttribute('aria-label', 'Add to favorites');
            } else {
                btnIcon.classList.replace('fa-regular', 'fa-solid');
                btnIcon.classList.add('text-red-500', 'animate-pulse-gentle');
                btnText.textContent = 'Saved to Favorites';
                btn.setAttribute('aria-label', 'Remove from favorites');
            }
            
            // Update quick action button if exists
            if (quickBtnIcon) {
                if (isCurrentlyFav) {
                    quickBtnIcon.classList.replace('fa-solid', 'fa-regular');
                    quickBtnIcon.classList.remove('text-red-400');
                    quickBtn.setAttribute('aria-label', 'Add to favorites');
                    if (quickBtn.querySelector('span')) quickBtn.querySelector('span').textContent = 'Save';
                } else {
                    quickBtnIcon.classList.replace('fa-regular', 'fa-solid');
                    quickBtnIcon.classList.add('text-red-400');
                    quickBtn.setAttribute('aria-label', 'Remove from favorites');
                    if (quickBtn.querySelector('span')) quickBtn.querySelector('span').textContent = 'Saved';
                }
            }
            
            try {
                const res = await fetch(`/tours/${tourId}/favorite`, { 
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    credentials: 'same-origin'
                });
                
                const data = await res.json();
                
                if (!data.success) {
                    // Revert if failed
                    if (isCurrentlyFav) {
                        btnIcon.classList.replace('fa-regular', 'fa-solid');
                        btnIcon.classList.add('text-red-500', 'animate-pulse-gentle');
                        btnText.textContent = 'Saved to Favorites';
                        btn.setAttribute('aria-label', 'Remove from favorites');
                        
                        if (quickBtnIcon) {
                            quickBtnIcon.classList.replace('fa-regular', 'fa-solid');
                            quickBtnIcon.classList.add('text-red-400');
                            quickBtn.setAttribute('aria-label', 'Remove from favorites');
                            if (quickBtn.querySelector('span')) quickBtn.querySelector('span').textContent = 'Saved';
                        }
                    } else {
                        btnIcon.classList.replace('fa-solid', 'fa-regular');
                        btnIcon.classList.remove('text-red-500', 'animate-pulse-gentle');
                        btnText.textContent = 'Add to Favorites';
                        btn.setAttribute('aria-label', 'Add to favorites');
                        
                        if (quickBtnIcon) {
                            quickBtnIcon.classList.replace('fa-solid', 'fa-regular');
                            quickBtnIcon.classList.remove('text-red-400');
                            quickBtn.setAttribute('aria-label', 'Add to favorites');
                            if (quickBtn.querySelector('span')) quickBtn.querySelector('span').textContent = 'Save';
                        }
                    }
                    showNotification("Could not update favorites. Please try again.", "error");
                } else {
                    showNotification(isCurrentlyFav ? "Removed from favorites" : "Added to favorites", "success");
                }
            } catch (err) {
                console.error('Favorite toggle error:', err);
                showNotification("An error occurred. Please try again.", "error");
                
                // Revert on error
                if (isCurrentlyFav) {
                    btnIcon.classList.replace('fa-regular', 'fa-solid');
                    btnIcon.classList.add('text-red-500', 'animate-pulse-gentle');
                    btnText.textContent = 'Saved to Favorites';
                } else {
                    btnIcon.classList.replace('fa-solid', 'fa-regular');
                    btnIcon.classList.remove('text-red-500', 'animate-pulse-gentle');
                    btnText.textContent = 'Add to Favorites';
                }
            } finally {
                btn.dataset.processing = 'false';
            }
        }
        
        // Notification system
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `fixed top-24 right-4 z-50 px-6 py-4 rounded-xl shadow-strong transform transition-all duration-300 translate-x-full max-w-sm ${
                type === 'success' ? 'bg-green-50 border border-green-200 text-green-800' : 
                type === 'error' ? 'bg-red-50 border border-red-200 text-red-800' :
                'bg-blue-50 border border-blue-200 text-blue-800'
            }`;
            notification.setAttribute('role', 'alert');
            notification.setAttribute('aria-live', 'polite');
            
            const icon = type === 'success' ? 'check-circle' : type === 'error' ? 'alert-circle' : 'info';
            notification.innerHTML = `
                <div class="flex items-start gap-3">
                    <i data-lucide="${icon}" class="w-5 h-5 flex-shrink-0 mt-0.5"></i>
                    <p class="font-medium flex-1">${message}</p>
                    <button onclick="this.parentElement.parentElement.remove()" class="ml-2 text-gray-400 hover:text-gray-600" aria-label="Dismiss notification">
                        <i data-lucide="x" class="w-4 h-4"></i>
                    </button>
                </div>
            `;
            
            document.body.appendChild(notification);
            lucide.createIcons();
            
            // Animate in
            setTimeout(() => {
                notification.classList.remove('translate-x-full');
                notification.classList.add('translate-x-0');
            }, 10);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                notification.classList.remove('translate-x-0');
                notification.classList.add('translate-x-full');
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 5000);
            
            // Add click to dismiss
            notification.querySelector('button').addEventListener('click', function() {
                notification.classList.remove('translate-x-0');
                notification.classList.add('translate-x-full');
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            });
        }
        
        // Waitlist function
        function joinWaitlist() {
            showNotification('You have been added to the waitlist. We\'ll notify you if spots become available.', 'success');
        }
        
        // Notify me function
        function notifyMe() {
            showNotification('We\'ll notify you when this tour becomes available for booking.', 'success');
        }
        
        // Open gallery modal
        function openGalleryModal() {
            showNotification('Full gallery view would open here in a modal.', 'info');
        }
        
        // Handle offline/online status
        window.addEventListener('online', () => {
            showNotification('You\'re back online!', 'success');
        });
        
        window.addEventListener('offline', () => {
            showNotification('You\'re offline. Some features may be limited.', 'error');
        });
        
        // Handle page visibility
        document.addEventListener('visibilitychange', () => {
            if (document.visibilityState === 'visible') {
                // Page is visible again
                document.title = '<%= tour.title %> | Casalinga Tours';
            }
        });
        
        // Service worker registration for PWA capabilities
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js').catch(err => {
                    console.log('ServiceWorker registration failed: ', err);
                });
            });
        }
    </script>
</body>
</html>