            p.style.left = `${Math.random() * 100}%`;
            p.style.top = `${Math.random() * 100}%`;
            p.style.animationDelay = `${Math.random() * 3}s`;
            p.style.animationDuration = `${2 + Math.random() * 3}s`;
            particlesContainer.appendChild(p);
        }

        // Parallax Effect (Hero)
        const heroBg = document.getElementById('hero-bg');
        document.addEventListener('mousemove', (e) => {
            const x = (e.clientX / window.innerWidth) * -20;
            const y = (e.clientY / window.innerHeight) * -20;
            heroBg.style.transform = `translate(${x}px, ${y}px) scale(1.1)`;
        });

        // Header Scroll Effect
        const header = document.getElementById('main-header');
        const logoText = document.getElementById('header-logo-text');
        const logoIcon = document.getElementById('header-logo-icon');
        const navLinks = document.querySelectorAll('.nav-link');
        const headerCta = document.getElementById('header-cta');
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');

        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                header.classList.add('bg-background/95', 'backdrop-blur-md', 'shadow-sm', 'py-3');
                header.classList.remove('bg-transparent', 'py-5');
                logoText.classList.replace('text-white', 'text-foreground');
                logoIcon.classList.replace('text-white', 'text-primary');
                mobileMenuBtn.classList.replace('text-white', 'text-foreground');
                
                navLinks.forEach(link => {
                    link.classList.replace('text-white/90', 'text-foreground');
                    link.classList.replace('hover:text-white', 'hover:text-primary');
                });
                
                headerCta.classList.replace('bg-white', 'bg-primary');
                headerCta.classList.replace('text-foreground', 'text-primary-foreground');
                headerCta.classList.remove('hover:bg-white/90');
                headerCta.classList.add('hover:bg-primary/90');
            } else {
                header.classList.remove('bg-background/95', 'backdrop-blur-md', 'shadow-sm', 'py-3');
                header.classList.add('bg-transparent', 'py-5');
                logoText.classList.replace('text-foreground', 'text-white');
                logoIcon.classList.replace('text-primary', 'text-white');
                mobileMenuBtn.classList.replace('text-foreground', 'text-white');

                navLinks.forEach(link => {
                    link.classList.replace('text-foreground', 'text-white/90');
                    link.classList.replace('hover:text-primary', 'hover:text-white');
                });

                headerCta.classList.replace('bg-primary', 'bg-white');
                headerCta.classList.replace('text-primary-foreground', 'text-foreground');
                headerCta.classList.remove('hover:bg-primary/90');
                headerCta.classList.add('hover:bg-white/90');
            }
        });

        // Mobile Menu Toggle
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuBtn.addEventListener('click', () => {
            if (mobileMenu.classList.contains('max-h-0')) {
                mobileMenu.classList.remove('max-h-0', 'opacity-0');
                mobileMenu.classList.add('max-h-96', 'opacity-100');
            } else {
                mobileMenu.classList.add('max-h-0', 'opacity-0');
                mobileMenu.classList.remove('max-h-96', 'opacity-100');
            }
        });
        
        document.querySelectorAll('.mobile-link').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('max-h-0', 'opacity-0');
                mobileMenu.classList.remove('max-h-96', 'opacity-100');
            });
        });

        // Newsletter Form
        document.getElementById('newsletter-form').addEventListener('submit', (e) => {
            e.preventDefault();
            e.target.style.opacity = '0';
            e.target.style.transform = 'scale(0.95)';
            setTimeout(() => {
                e.target.style.display = 'none';
                document.getElementById('newsletter-success').classList.remove('hidden');
                document.getElementById('newsletter-success').classList.add('flex');
            }, 300);
        });

        // Testimonial Navigation
        document.getElementById('prev-testimonial').addEventListener('click', () => {
            currentTestimonialIndex = (currentTestimonialIndex - 1 + testimonialsData.length) % testimonialsData.length;
            renderTestimonials();
        });
        document.getElementById('next-testimonial').addEventListener('click', () => {
            currentTestimonialIndex = (currentTestimonialIndex + 1) % testimonialsData.length;
            renderTestimonials();
        });
        // Auto rotate
        setInterval(() => {
            currentTestimonialIndex = (currentTestimonialIndex + 1) % testimonialsData.length;
            renderTestimonials();
        }, 5000);

        // Scroll Animations (Intersection Observer)
        function observeElements() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('active');
                        entry.target.classList.remove('opacity-0', 'translate-y-10'); 
                        entry.target.classList.add('opacity-100', 'translate-y-0');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
            document.querySelectorAll('.reveal-card').forEach(el => observer.observe(el));
        }

        observeElements();

        // Filter Buttons
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                document.querySelectorAll('.filter-btn').forEach(b => {
                    b.classList.remove('bg-primary', 'text-primary-foreground', 'shadow-lg');
                    b.classList.add('bg-secondary', 'text-secondary-foreground');
                });
                e.target.classList.remove('bg-secondary', 'text-secondary-foreground');
                e.target.classList.add('bg-primary', 'text-primary-foreground', 'shadow-lg');
                
                renderTours(e.target.dataset.filter);
            });
        });

    </script>
