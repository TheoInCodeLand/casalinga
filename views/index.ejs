        const testimonialsData = [
            { id: 1, name: "Sarah Mitchell", role: "Wellness Enthusiast", avatar: "SM", content: "The Wilderness Retreat was absolutely life-changing. Waking up to mountain views, practicing yoga at sunrise, and the incredible staff made this the best trip of my life.", rating: 5, tour: "Wilderness Retreat" },
