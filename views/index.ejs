                grid.appendChild(div);
            });
        }

        let currentTestimonialIndex = 0;
        function renderTestimonials() {
            const track = document.getElementById('testimonial-track');
            const dotsContainer = document.getElementById('testimonial-dots');
            
            track.innerHTML = '';
            dotsContainer.innerHTML = '';

            testimonialsData.forEach((t, i) => {
                // Cards
                const div = document.createElement('div');
                const offset = i - currentTestimonialIndex;
                const isActive = i === currentTestimonialIndex;
                const isPrev = offset === -1 || (currentTestimonialIndex === 0 && i === testimonialsData.length - 1);
                const isNext = offset === 1 || (currentTestimonialIndex === testimonialsData.length - 1 && i === 0);
                
                // Hide non-adjacent items for cleaner carousel
                const shouldShow = isActive || isPrev || isNext;
                if (!shouldShow) return;

                div.className = `w-[350px] sm:w-[400px] flex-shrink-0 transition-all duration-500 bg-card rounded-2xl p-8 border border-border relative ${isActive ? 'scale-100 shadow-xl opacity-100 z-10' : 'scale-90 shadow-sm opacity-60 z-0 hidden lg:block'}`;
                
                // Position logic simulated with transform in CSS, here just simpler flow
                div.innerHTML = `
                    <i data-lucide="quote" class="absolute top-6 right-6 h-10 w-10 text-primary/10"></i>
                    <div class="flex gap-1 mb-6">
                        ${Array(t.rating).fill(0).map(() => `<i data-lucide="star" class="h-5 w-5 fill-amber-400 text-amber-400"></i>`).join('')}
