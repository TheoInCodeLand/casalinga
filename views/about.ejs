    <!-- Our Philosophy Section -->
    <section class="py-24 bg-secondary/30 relative overflow-hidden">
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
        
        <div class="container">
            <div class="text-center max-w-3xl mx-auto mb-16 animate-fade-in-up">
                <div class="inline-flex items-center gap-2 bg-primary/10 px-4 py-2 rounded-full mb-6">
                    <i data-lucide="sparkles" class="h-4 w-4 text-primary"></i>
                    <span class="text-primary text-sm font-semibold">Our Guiding Principles</span>
                </div>
                
                <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl font-semibold mb-6">
                    More Than Tours:<br>
                    <span class="gradient-text">Transformative Experiences</span>
                </h2>
                
                <p class="text-muted-foreground text-lg">
                    We don't just show you beautiful places—we create spaces for meaningful transformation, 
                    connection, and personal growth.
                </p>
            </div>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Philosophy Card 1 -->
                <div class="bg-card p-8 rounded-2xl border border-border transition-all duration-500 hover:shadow-xl hover:shadow-primary/5 hover:-translate-y-2 animate-fade-in-up">
                    <div class="inline-flex items-center justify-center w-14 h-14 rounded-xl bg-primary/10 mb-6">
                        <i data-lucide="leaf" class="h-7 w-7 text-primary"></i>
                    </div>
                    <h3 class="font-serif text-xl font-semibold mb-4">Sustainable by Nature</h3>
                    <p class="text-muted-foreground mb-6">
                        We operate with deep respect for the environment, practicing Leave No Trace principles 
