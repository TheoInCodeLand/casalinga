        <li class="nav-item">
            <a class="nav-link <%= typeof title !== 'undefined' && title.includes('Analytics') ? 'active' : '' %>" href="/admin/analytics">
                <i class="fas fa-chart-line"></i> Analytics
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= typeof title !== 'undefined' && title.includes('User') ? 'active' : '' %>" href="/admin/users">
