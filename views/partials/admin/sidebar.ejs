        <% } %>
        <li class="nav-item mt-3">
            <span class="text-muted small px-3 text-uppercase">Settings</span>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/admin/settings/categories"><i class="fas fa-tags"></i> Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/admin/settings/amenities"><i class="fas fa-wifi"></i> Amenities</a>
