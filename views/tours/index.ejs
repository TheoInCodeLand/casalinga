<div class="bg-light py-5">
    <div class="container">
        <h1 class="fw-bold text-center mb-0">Our Tours</h1>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white fw-bold py-3">Filter Tours</div>
                <div class="card-body">
                    <form action="/tours" method="GET">
                        <div class="mb-3">
                            <label class="form-label small text-muted">Category</label>
                            <select name="category" class="form-select">
                                <option value="">All Categories</option>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat.name %>" <%= filters.category === cat.name ? 'selected' : '' %>><%= cat.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label small text-muted">Price Range</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" name="price_min" class="form-control" placeholder="Min" value="<%= filters.price_min %>">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="price_max" class="form-control" placeholder="Max" value="<%= filters.price_max %>">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label small text-muted">Start Date</label>
                            <input type="date" name="date" class="form-control" value="<%= filters.date %>">
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                            <a href="/tours" class="btn btn-outline-secondary">Reset</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <% if (tours.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h3>No tours found</h3>
                    <p class="text-muted">Try adjusting your search criteria.</p>
                </div>
            <% } %>

            <div class="row g-4">
                <% tours.forEach(tour => { %>
                <div class="col-md-6 col-xl-4">
                    <div class="card tour-card h-100">
                        <div class="tour-img-wrapper">
                            <% if(tour.discount_price) { %>
                                <span class="position-absolute top-0 start-0 bg-danger text-white px-3 py-1 m-3 rounded-pill small fw-bold">Sale</span>
                            <% } %>
                            <img src="<%= tour.main_image || '/images/placeholder-tour.jpg' %>" alt="<%= tour.title %>">
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <small class="text-muted"><i class="far fa-clock"></i> <%= tour.duration_days %> Days</small>
                                <small class="text-muted"><i class="far fa-calendar"></i> <%= moment(tour.start_date).format('MMM D') %></small>
                            </div>
                            <h5 class="card-title fw-bold"><a href="/tours/<%= tour.slug %>" class="text-decoration-none text-dark"><%= tour.title %></a></h5>
                            <p class="small text-muted mb-2"><i class="fas fa-map-marker-alt text-primary me-1"></i> <%= tour.location %></p>
                            
                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <div>
                                    <% if(tour.discount_price) { %>
                                        <span class="text-muted text-decoration-line-through small">R<%= tour.price %></span>
                                        <span class="fw-bold text-success fs-5">R<%= tour.discount_price %></span>
                                    <% } else { %>
                                        <span class="fw-bold fs-5">R<%= tour.price %></span>
                                    <% } %>
                                </div>
                                <a href="/tours/<%= tour.slug %>" class="btn btn-sm btn-outline-primary">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>

            <% if (totalPages > 1) { %>
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                    <% for(let i=1; i<=totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                    <% } %>
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                    </li>
                </ul>
            </nav>
            <% } %>
        </div>
    </div>
</div>